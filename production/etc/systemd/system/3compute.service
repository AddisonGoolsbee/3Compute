[Unit]
Description=3compute backend service
After=network.target

[Service]
Type=simple
WorkingDirectory=/var/www/3compute
Environment=PYTHONUNBUFFERED=1
ExecStart=/var/www/3compute/.venv/lib/python3.11 -m backend
Restart=always
RestartSec=5
User=www-data
Group=www-data

[Install]
WantedBy=multi-user.target